@model IEnumerable<PBLC.Web.Models.Entities.Course>
@{
    ViewData["Title"] = "All Courses";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-book"></i> All Courses</h2>
        @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
        {
            <a asp-controller="Teacher" asp-action="CreateCourse" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Course
            </a>
        }
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var course in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@course.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-2">
                                <i class="bi bi-code-square"></i> <strong>Code:</strong> @course.Code
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-building"></i> <strong>Department:</strong> @course.Department?.Name
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-person"></i> <strong>Teacher:</strong> @course.Teacher?.FullName
                            </p>
                            <p class="card-text">@course.Description</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-info">
                                    @course.EnrolledStudents?.Count Students
                                </span>
                                <div>
                                    <a href="@Url.Action("Details", "Course", new { id = course.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No courses available yet.
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.15) !important;
    }
</style>
