@model IEnumerable<PBLC.Web.Models.Entities.Course>
@{
    ViewData["Title"] = "Select Course";
    var actionType = ViewBag.ActionType as string;
    var isReview = actionType == "review";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Select Course</li>
                </ol>
            </nav>
            <h2>
                <i class="bi bi-@(isReview ? "clipboard-check" : "file-plus")"></i> 
                @(isReview ? "Review Submissions" : "Create Assignment") - Select Course
            </h2>
            <p class="text-muted">@(isReview ? "Choose a course to review student submissions" : "Choose a course to create an assignment")</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                var pendingCount = isReview ? course.Assignments?.SelectMany(a => a.Submissions ?? new List<PBLC.Web.Models.Entities.AssignmentSubmission>())
                    .Count(s => s.ObtainedMarks == null) : 0;

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-header @(isReview ? "bg-info" : "bg-warning") text-white">
                            <h5 class="mb-0">@course.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-2">
                                <i class="bi bi-code-square"></i> <strong>Code:</strong> @course.Code
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-building"></i> <strong>Department:</strong> @course.Department?.Name
                            </p>
                            
                            <hr />
                            
                            <div class="row text-center mb-3">
                                <div class="col-4">
                                    <div class="stat-box">
                                        <h4 class="text-primary mb-0">@course.EnrolledStudents?.Count</h4>
                                        <small class="text-muted">Students</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-box">
                                        <h4 class="text-warning mb-0">@course.Assignments?.Count</h4>
                                        <small class="text-muted">Assignments</small>
                                    </div>
                                </div>
                                @if (isReview)
                                {
                                    <div class="col-4">
                                        <div class="stat-box">
                                            <h4 class="text-danger mb-0">@pendingCount</h4>
                                            <small class="text-muted">Pending</small>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="d-grid">
                                @if (isReview)
                                {
                                    @if (course.Assignments != null && course.Assignments.Any())
                                    {
                                        <a href="@Url.Action("Details", "Course", new { id = course.Id })" class="btn btn-info text-white">
                                            <i class="bi bi-clipboard-check"></i> View Assignments & Review
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary" disabled>
                                            <i class="bi bi-x-circle"></i> No Assignments Yet
                                        </button>
                                    }
                                }
                                else
                                {
                                    <a href="@Url.Action("Create", "Assignment", new { courseId = course.Id })" class="btn btn-warning text-white">
                                        <i class="bi bi-file-plus"></i> Create Assignment for this Course
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3">No Courses Found</h4>
                <p class="text-muted">You need to create a course first before @(isReview ? "reviewing submissions" : "creating assignments").</p>
                <a asp-controller="Teacher" asp-action="CreateCourse" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create Your First Course
                </a>
            </div>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
        border: none;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.2) !important;
    }
    .stat-box {
        padding: 10px;
        border-radius: 8px;
        background: #f8f9fa;
    }
</style>
