@model IEnumerable<PBLC.Web.Models.Entities.Course>
@{
    ViewData["Title"] = "My Courses";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-book-half"></i> My Courses</h2>
        <a asp-action="CreateCourse" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Course
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-header bg-gradient bg-primary text-white">
                            <h5 class="mb-0">@course.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-2">
                                <i class="bi bi-code-square"></i> Code: <strong>@course.Code</strong>
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-building"></i> @course.Department?.Name
                            </p>
                            <p class="card-text text-truncate">@course.Description</p>
                            
                            <hr />
                            
                            <div class="row text-center mb-3">
                                <div class="col-4">
                                    <div class="stat-box">
                                        <h4 class="text-primary mb-0">@course.EnrolledStudents?.Count</h4>
                                        <small class="text-muted">Students</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-box">
                                        <h4 class="text-success mb-0">@course.Lectures?.Count</h4>
                                        <small class="text-muted">Lectures</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-box">
                                        <h4 class="text-warning mb-0">@course.Assignments?.Count</h4>
                                        <small class="text-muted">Assignments</small>
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Details", "Course", new { id = course.Id })" class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i> View Course
                                </a>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Upload", "Lecture", new { courseId = course.Id })" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-cloud-upload"></i> Upload Lecture
                                    </a>
                                    <a href="@Url.Action("Create", "Assignment", new { courseId = course.Id })" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-file-plus"></i> Add Assignment
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-muted small">
                            Created: @course.CreatedAt.ToString("MMM dd, yyyy")
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3">No Courses Yet</h4>
                <p class="text-muted">You haven't created any courses. Get started by creating your first course!</p>
                <a asp-action="CreateCourse" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create Your First Course
                </a>
            </div>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
        border: none;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.2) !important;
    }
    .stat-box {
        padding: 10px;
        border-radius: 8px;
        background: #f8f9fa;
    }
</style>
