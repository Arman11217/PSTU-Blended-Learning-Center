@model IEnumerable<PBLC.Web.Models.Entities.AssignmentSubmission>
@{
    ViewData["Title"] = "My Assignments";
}

<div class="container-fluid">
    <h2 class="mb-4"><i class="bi bi-file-earmark-check"></i> My Assignments</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var submission in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header @(submission.ObtainedMarks.HasValue ? "bg-success" : "bg-warning") text-white">
                            <h5 class="mb-0">@submission.Assignment.Title</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-2">
                                <i class="bi bi-book"></i> <strong>Course:</strong> @submission.Assignment.Course.Name
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-calendar-check"></i> <strong>Submitted:</strong> @submission.SubmittedAt.ToString("MMM dd, yyyy")
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-calendar-event"></i> <strong>Due Date:</strong> @submission.Assignment.DueDate.ToString("MMM dd, yyyy")
                            </p>
                            
                            @if (submission.SubmittedAt > submission.Assignment.DueDate)
                            {
                                <span class="badge bg-danger mb-2">Late Submission</span>
                            }
                            else
                            {
                                <span class="badge bg-success mb-2">On Time</span>
                            }

                            <hr>

                            @if (submission.ObtainedMarks.HasValue)
                            {
                                var percentage = (double)submission.ObtainedMarks.Value / submission.Assignment.MaxMarks * 100;
                                <div class="mb-3">
                                    <h4 class="text-center mb-2">
                                        <span class="badge @(percentage >= 80 ? "bg-success" : percentage >= 60 ? "bg-primary" : percentage >= 40 ? "bg-warning" : "bg-danger")">
                                            @submission.ObtainedMarks / @submission.Assignment.MaxMarks
                                        </span>
                                    </h4>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar @(percentage >= 80 ? "bg-success" : percentage >= 60 ? "bg-primary" : percentage >= 40 ? "bg-warning" : "bg-danger")" 
                                             role="progressbar" 
                                             style="width: @percentage%;" 
                                             aria-valuenow="@percentage" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @percentage.ToString("F0")%
                                        </div>
                                    </div>
                                </div>

                                @if (!string.IsNullOrWhiteSpace(submission.Feedback))
                                {
                                    <div class="alert alert-info">
                                        <strong><i class="bi bi-chat-left-text"></i> Teacher Feedback:</strong>
                                        <p class="mb-0 mt-2">@submission.Feedback</p>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-hourglass-split"></i> Waiting for evaluation
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Details", "Course", new { id = submission.Assignment.CourseId })" class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i> View Course
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #6c757d;"></i>
                <h4 class="mt-3">No Assignments Submitted Yet</h4>
                <p class="text-muted">Browse your enrolled courses to find assignments to complete.</p>
                <a href="@Url.Action("EnrolledCourses")" class="btn btn-primary mt-3">
                    <i class="bi bi-book"></i> View My Courses
                </a>
            </div>
        </div>
    }
</div>
