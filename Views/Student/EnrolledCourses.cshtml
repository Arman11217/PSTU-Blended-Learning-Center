@model IEnumerable<PBLC.Web.Models.Entities.Course>
@{
    ViewData["Title"] = "My Enrolled Courses";
}

<div class="container-fluid">
    <h2 class="mb-4"><i class="bi bi-book-fill"></i> My Enrolled Courses</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@course.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-2">
                                <i class="bi bi-code-square"></i> <strong>Code:</strong> @course.Code
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-person"></i> <strong>Teacher:</strong> @course.Teacher?.FullName
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-building"></i> <strong>Dept:</strong> @course.Department?.Name
                            </p>
                            <p class="card-text">@course.Description</p>
                            
                            <hr />
                            
                            <div class="row text-center">
                                <div class="col-6">
                                    <h5 class="text-success">@course.Lectures?.Count</h5>
                                    <small class="text-muted">Lectures</small>
                                </div>
                                <div class="col-6">
                                    <h5 class="text-warning">@course.Assignments?.Count</h5>
                                    <small class="text-muted">Assignments</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Details", "Course", new { id = course.Id })" class="btn btn-primary w-100">
                                <i class="bi bi-eye"></i> View Course
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3">Not Enrolled in Any Courses</h4>
                <p class="text-muted">Browse available courses and enroll to start learning!</p>
                <a asp-action="AvailableCourses" class="btn btn-primary mt-3">
                    <i class="bi bi-search"></i> Browse Courses
                </a>
            </div>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.2) !important;
    }
</style>
