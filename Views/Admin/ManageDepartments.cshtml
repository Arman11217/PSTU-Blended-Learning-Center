@model IEnumerable<PBLC.Web.Models.Entities.Department>
@{
    ViewData["Title"] = "Manage Departments";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building-fill"></i> Manage Departments</h2>
        <a asp-action="CreateDepartment" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Department
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var d in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm hover-card">
                        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-building-fill"></i> @d.Name</h5>
                            <div class="btn-group btn-group-sm">
                                <a href="@Url.Action("EditDepartment", "Admin", new { id = d.Id })" 
                                   class="btn btn-light" title="Edit Department">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-danger" 
                                        onclick="deleteDepartment(@d.Id, '@d.Name')" 
                                        title="Delete Department">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <i class="bi bi-bank text-muted"></i> 
                                <strong>Faculty:</strong> @d.Faculty?.Name
                            </p>
                            <hr>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-book"></i> @(d.Courses?.Count ?? 0) Courses
                                </span>
                                <small class="text-muted">
                                    Created: @d.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3">No Departments Yet</h4>
                <p class="text-muted">Create your first department to get started!</p>
                <a asp-action="CreateDepartment" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create First Department
                </a>
            </div>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.15) !important;
    }
</style>

@section Scripts {
    <script>
        function deleteDepartment(deptId, deptName) {
            if (confirm(`Are you sure you want to delete "${deptName}"?\n\nWarning: This will also affect all related courses!`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("DeleteDepartment", "Admin")/' + deptId;
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token.value;
                    form.appendChild(tokenInput);
                }
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}