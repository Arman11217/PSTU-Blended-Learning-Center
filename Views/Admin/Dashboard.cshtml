@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold"><i class="bi bi-speedometer2"></i> Admin Dashboard</h1>
            <p class="text-muted">Welcome to the administrative control panel</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 opacity-75">Total Users</h6>
                            <h2 class="card-title mb-0">@ViewBag.TotalUsers</h2>
                        </div>
                        <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 opacity-75">Total Courses</h6>
                            <h2 class="card-title mb-0">@ViewBag.TotalCourses</h2>
                        </div>
                        <i class="bi bi-book-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 opacity-75">Departments</h6>
                            <h2 class="card-title mb-0">@ViewBag.TotalDepartments</h2>
                        </div>
                        <i class="bi bi-building" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 opacity-75">Active Teachers</h6>
                            <h2 class="card-title mb-0">@ViewBag.TotalTeachers</h2>
                        </div>
                        <i class="bi bi-person-workspace" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col">
            <h3 class="mb-3">Quick Actions</h3>
            <div class="row g-3">
                <div class="col-md-3">
                    <a href="@Url.Action("CreateFaculty", "Admin")" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 hover-shadow">
                            <div class="card-body text-center">
                                <i class="bi bi-bank text-danger" style="font-size: 2.5rem;"></i>
                                <h5 class="card-title mt-3">Create Faculty</h5>
                                <p class="card-text text-muted">Add new faculty</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("ManageUsers", "Admin")" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 hover-shadow">
                            <div class="card-body text-center">
                                <i class="bi bi-people text-primary" style="font-size: 2.5rem;"></i>
                                <h5 class="card-title mt-3">Manage Users</h5>
                                <p class="card-text text-muted">Add, edit, or remove users</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("ManageDepartments", "Admin")" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 hover-shadow">
                            <div class="card-body text-center">
                                <i class="bi bi-building text-success" style="font-size: 2.5rem;"></i>
                                <h5 class="card-title mt-3">Manage Departments</h5>
                                <p class="card-text text-muted">Organize departments</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("ManageCourses", "Admin")" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 hover-shadow">
                            <div class="card-body text-center">
                                <i class="bi bi-book text-info" style="font-size: 2.5rem;"></i>
                                <h5 class="card-title mt-3">Manage Courses</h5>
                                <p class="card-text text-muted">Oversee all courses</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Users</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @if (ViewBag.RecentUsers != null)
                        {
                            @foreach (var user in ViewBag.RecentUsers)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-0">@user.FullName</h6>
                                            <small class="text-muted">@user.Email</small>
                                        </div>
                                        <span class="badge bg-primary">@user.Role</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center py-3">No recent users</p>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> System Overview</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>Total Students</span>
                                <strong>@ViewBag.TotalStudents</strong>
                            </div>
                        </li>
                        <li class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>Active Courses</span>
                                <strong>@ViewBag.ActiveCourses</strong>
                            </div>
                        </li>
                        <li class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>Total Assignments</span>
                                <strong>@ViewBag.TotalAssignments</strong>
                            </div>
                        </li>
                        <li class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>Q&A Questions</span>
                                <strong>@ViewBag.TotalQuestions</strong>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
