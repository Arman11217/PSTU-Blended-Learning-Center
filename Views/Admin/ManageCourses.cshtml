@model IEnumerable<PBLC.Web.Models.Entities.Course>
@{
    ViewData["Title"] = "Manage Courses";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6 fw-bold"><i class="bi bi-book"></i> Manage Courses</h1>
            <p class="text-muted">View and manage all courses in the system</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Course Code</th>
                                <th>Course Name</th>
                                <th>Department</th>
                                <th>Faculty</th>
                                <th>Teacher</th>
                                <th>Status</th>
                                <th>Enrolled Students</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-info">@course.Code</span></td>
                                    <td>
                                        <strong>@course.Name</strong>
                                        @if (!string.IsNullOrEmpty(course.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@course.Description.Substring(0, Math.Min(50, course.Description.Length))@(course.Description.Length > 50 ? "..." : "")</small>
                                        }
                                    </td>
                                    <td>
                                        <i class="bi bi-building"></i> @course.Department?.Name
                                    </td>
                                    <td>
                                        <i class="bi bi-bank"></i> @course.Department?.Faculty?.Name
                                    </td>
                                    <td>
                                        @if (course.Teacher != null)
                                        {
                                            <i class="bi bi-person"></i> @course.Teacher.FullName
                                            <br />
                                            <small class="text-muted">@course.Teacher.Email</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </td>
                                    <td>
                                        @if (course.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@(course.EnrolledStudents?.Count ?? 0)</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@course.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", "Course", new { id = course.Id })" 
                                               class="btn btn-outline-info" 
                                               title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-warning" 
                                                    title="Toggle Status"
                                                    onclick="toggleCourseStatus(@course.Id)">
                                                <i class="bi bi-toggle-on"></i>
                                            </button>
                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    title="Delete Course"
                                                    onclick="deleteCourse(@course.Id, '@course.Name')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-3">No courses found in the system</p>
                    <p class="small">Teachers can create courses from their dashboard</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<!-- Add spacing before footer -->
<div style="height: 80px;"></div>

@section Scripts {
<script>
    function toggleCourseStatus(courseId) {
        if (confirm('Are you sure you want to toggle this course status?')) {
            fetch(`/Admin/ToggleCourseStatus?id=${courseId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Failed to toggle course status');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }
    }

    function deleteCourse(courseId, courseName) {
        if (confirm(`Are you sure you want to delete the course "${courseName}"? This action cannot be undone.`)) {
            fetch(`/Admin/DeleteCourse?id=${courseId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Failed to delete course. It may have enrolled students or assignments.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }
    }
</script>
}

<style>
    .table tbody tr {
        transition: all 0.3s ease;
    }
    .table tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
        transform: translateX(5px);
    }
    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
    }
</style>
